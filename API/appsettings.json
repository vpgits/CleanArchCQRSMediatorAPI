{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=cleanarchcqrsmediatorapi.postgres;Database=cleanarchcqrsmediatorapi;User Id=postgres;Password=password;",
    "Redis": "localhost:6379"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "ElasticConfiguration": {
    "Uri": "http://elastic:Strong_password123!@localhost:9200"
  },
  "ApplicationInsights": {
    "ConnectionString": "<connection string>"
  },
  "APPINSIGHTS_INSTRUMENTATIONKEY": "<instrumentation key>",
  "Jwt": {
    "Key": "<super secret key goes here>",
    "Issuer": "https://localhost:7259",
    "Audience": "https://localhost:5259"
  }
}
